{% extends 'baseAdmin.html.twig' %}


{% block body %}
    <div class="container">
        List
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Scientific</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                {% for list in moleculeList %}
                    <tr>
                        <td>{{ list.name }}</td>
                        <td>{{ list.scientificname }}</td>
                        <td>{{ list.description }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('edit', { 'id': list.id }) }}" >edit</a>
                                </li>
                                <li>
                                    <a href="{{ path('delete', { 'id': list.id })}}">Delete</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>


<style>table, th, td {
        border: 1px solid black;
    }
</style>
{% endblock %}
